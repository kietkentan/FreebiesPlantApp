<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeImageStyle_Avatar">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="alphabetTextView">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:clickable">false</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/text_chip</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MenusStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>
</resources>