<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />

        <variable
            name="detail"
            type="com.khtn.freebies.module.Articles" />

        <variable
            name="user"
            type="com.khtn.freebies.module.User" />

        <variable
            name="time"
            type="String" />

        <variable
            name="myId"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iv_item_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_hint"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <ImageButton
                android:id="@+id/ib_exit_articles_detail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                app:tint="@color/white"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,ImageContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:weightSum="10"
                tools:ignore="RtlHardcoded">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentBottom="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec_list_review"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_see_more"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/background_shimmer"
                                android:scaleType="centerInside"
                                android:visibility="gone"
                                app:layout_constraintDimensionRatio="1:1"
                                android:src="@drawable/ic_see_more_open"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:tint="@color/white"
                                tools:ignore="ImageContrastCheck" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="155dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tags_articles_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                addTags="@{detail.tags}"
                android:layout_marginVertical="20dp" />

            <TextView
                android:id="@+id/tv_name_articles_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/name_plant"
                android:text="@{detail.title}"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_user_articles"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:visibility="gone"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    loadImage="@{user.avatar}"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeImageStyle_Avatar"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="12sp"
                        android:text="@{user.name}"
                        android:gravity="center_vertical"
                        android:textColor="@color/name_plant"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/big_tag"
                        android:gravity="center_vertical"
                        android:text="@{time}"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_follow"
                    android:layout_width="73dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_not_follow"
                    android:orientation="horizontal"
                    android:visibility="@{myId.equals(user.id) ? View.GONE : View.VISIBLE}"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/ic_add"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/follow"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_articles_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="10dp"
                android:text="@{detail.content}"
                android:textColor="@color/alphabet_item"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_favorite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="20dp"
            android:background="@color/not_like"
            android:elevation="20dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/ic_heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
            app:shapeAppearanceOverlay="@style/ShapeImageStyle_Avatar"
            tools:ignore="ImageContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>