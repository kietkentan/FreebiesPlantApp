<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.khtn.freebies.viewmodel.AddingNewPlantViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:textColor="@color/background_button"
                android:background="@drawable/custom_button_2"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_1"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frameLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_item_review_product"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@color/background_shimmer"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_select_photo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pic_add_photo"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                    <LinearLayout
                        android:id="@+id/layout_see_more_picture"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:weightSum="10"
                        tools:ignore="RtlHardcoded">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="20dp"
                                tools:ignore="UselessParent">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_list_review_products"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:visibility="gone" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/iv_see_more"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/background_shimmer"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_see_more_open"
                                        android:tint="@color/white"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintDimensionRatio="1:1"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:ignore="ImageContrastCheck,TooDeepLayout" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ib_edit_review_product"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|right"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_options"
                        tools:ignore="ContentDescription,ImageContrastCheck,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </FrameLayout>

                <TextView
                    android:id="@+id/error_list_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/error"
                    android:textStyle="italic"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/error_list_image">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/tags_adding_plant"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginVertical="20dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_plant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/plant_name"
                        app:errorEnabled="true"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:lines="1"
                            android:text="@{viewModel.namePlant}"
                            android:paddingStart="0dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            tools:ignore="RtlSymmetry,TextContrastCheck,UnusedAttribute" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/description"
                        app:errorEnabled="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background"
                            android:gravity="bottom"
                            android:paddingStart="0dp"
                            android:text="@{viewModel.description}"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:textColor="@color/black"
                            tools:ignore="RtlSymmetry,TextContrastCheck,UnusedAttribute" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu_species"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        style="@style/MenusStyle"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_species"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="none"
                            android:background="@color/background"
                            android:paddingStart="0dp"
                            android:text="@{viewModel.species}"
                            tools:ignore="LabelFor,RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu_kingdom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        style="@style/MenusStyle"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_kingdom"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="none"
                            android:background="@color/background"
                            android:paddingStart="0dp"
                            android:text="@{viewModel.kingdom}"
                            tools:ignore="LabelFor,RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        style="@style/MenusStyle"
                        app:endIconTint="@color/black"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_family"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="none"
                            android:text="@{viewModel.family}"
                            android:paddingStart="0dp"
                            android:background="@color/background"
                            tools:ignore="LabelFor,RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/background_loading">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>