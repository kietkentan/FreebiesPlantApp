<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="articles"
            type="com.khtn.freebies.module.Articles" />

        <variable
            name="user"
            type="com.khtn.freebies.module.User" />

        <variable
            name="time"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        android:layout_marginVertical="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_item_articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_articles_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                loadImage="@{articles.thumbnail}"
                app:layout_constraintDimensionRatio="1:0.438"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_sort_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingVertical="5dp"
                android:textSize="15sp"
                android:textStyle="bold|normal"
                android:text="@{articles.sortTitle}"
                android:textColor="@color/name_plant"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/iv_articles_thumbnail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                app:layout_constraintTop_toBottomOf="@id/tv_sort_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    loadImage="@{user.avatar}"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeImageStyle_Avatar"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="11sp"
                        android:text="@{user.name}"
                        android:gravity="center_vertical"
                        android:textColor="@color/name_plant"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/big_tag"
                        android:gravity="center_vertical"
                        android:text="@{time}"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/ib_book_mark"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_book_mark_none"
                        tools:ignore="ContentDescription"
                        android:layout_marginEnd="15dp"/>

                    <ImageButton
                        android:id="@+id/ib_like"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_heart_none"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>