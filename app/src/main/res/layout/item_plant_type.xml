<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="type"
            type="com.khtn.freebies.module.PlantType" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="160dp"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_plant_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                loadImage="@{type.image}"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_plant_type_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:text='@{type.quantity + ""}'
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity_types_of_plants"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_plant_type"
                app:layout_constraintStart_toEndOf="@+id/tv_plant_type_quantity" />

            <TextView
                android:id="@+id/tv_plant_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{type.name}"
                android:textSize="18sp"
                android:textStyle="bold|normal"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/tv_plant_type_quantity"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
